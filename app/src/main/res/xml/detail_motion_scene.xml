<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:autoTransition="animateToEnd"
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start"
        app:duration="1000">
        <OnClick
            app:clickAction="toggle"
            app:targetId="@id/status_text" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space32"
            android:layout_marginLeft="@dimen/space32"
            app:layout_constraintBottom_toBottomOf="@+id/status_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/status_title" />

        <Constraint
            android:id="@+id/status_title"
            android:layout_marginStart="@dimen/space20"
            android:layout_marginTop="@dimen/space40"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/file_name" />

        <Constraint
            android:id="@+id/status_text_view"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/space40"
            android:layout_marginTop="@dimen/space100"
            android:layout_marginEnd="@dimen/space16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/status_title_text_view"
            app:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@id/status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/status_title"
            app:layout_constraintStart_toStartOf="@+id/file_name" />
    </ConstraintSet>


</MotionScene>